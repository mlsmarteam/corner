<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
  <%if company_user? || admin_user? %>
    <a href="<%= fields_user_path(@user) %>">
      <strong id="fieds" class="stat">
        <%= @user.fields.count %>
      </strong>
      fields
    </a>
  <%end%>
</div>
